<!DOCTYPE html>
<html>
  <head>
    <title>PraiseHabit</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css2?family=Julius+Sans+One&family=Prata&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Prata&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header">
        <a class="navbar-logo" href="/">PRAiSE HABiT</a>
        <nav class="navbar">
          <ul class="nav">
            <% if user_signed_in? %>
              <li class="nav-list">
                <%=link_to "My Page", users_my_page_path, class: "font" %>
              </li>
              <li class="nav-list">
                <%=link_to "Post Page", posts_path, class: "font" %>
              </li>
              <li class="nav-list">
                <%=link_to "Receive Page", reply_path(current_user.id), class: "font" %>
              </li>
              <li class="nav-list">
                <%=link_to "Contact", contact_index_path, class: "font" %>
              </li>
              <li class="nav-list">
                <%=link_to "Sign Out", destroy_user_session_path, method: :delete, class: "font" %>
              </li>
            <% else %>
              <li class="nav-list">
                <%=link_to "About", homes_about_path, class: "font" %>
              </li>
              <li class="nav-list">
                <%=link_to "Contact", contact_index_path, class: "font" %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>


    <main>
      <%= yield %>
    </main>

    <footer>
      <div class="footer">
        <p>Wishing a bright day</p>
      </div>
    </footer>

  </body>
</html>
