<div class="conteiner">
  <%= form_for @contact, :url => contacts_confirm_path do |f| %>
    <div class="contact-heading">
      <h1>Contact</h1>
    </div>

    <% if @contact.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <strong>入力内容にエラーがあります</strong>
        <ul>
          <% @contact.errors.each do |attr, msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="contact-box">
      <div class="form-group row justify-content-center">
        <label class="col-2 control-label col-from-label text-left pl-0">ニックネーム<span class="text-danger">（必須）</span></label>
        <%= f.text_field :name , class:"form-control pl-0 col-3" %>
      </div>
      <div class="form-group row justify-content-center">
        <label class="col-2 control-label col-from-label text-left pl-0">メールアドレス<span class="text-danger">（必須）</span></label>
        <%= f.text_field :email , class:"form-control pl-0 col-3" %>
      </div>
      <div class="form-group row justify-content-center">
        <label class="col-2 control-label col-from-label text-left pl-0">お問い合わせ内容</label>
        <%= f.text_area :message, class:"form-control pl-0 col-3" %>
      </div>
    </div>
    <div class="contact-buttom">
      <%= f.submit 'CONFIRM', class: "fuwatto_btn_green" %>
    </div>
  <% end %>
</div>