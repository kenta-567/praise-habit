<div class="conteiner">
  <div class="heading">
    <h1 class="text-center">Sign up</h1>
  </div>
  <div class="content">
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="form-group row">
        <label class="col-2 offset-3 control-label col-from-label text-center px-0">プロフィール画像</label>
        <%= f.file_field :profile_image, class: "pl-5 ml-3 col-3" %>
      </div>

      <div class="form-group row justify-content-center">
        <label class="col-2 control-label col-from-label text-left pl-0">ニックネーム</label>
        <%= f.text_field :nickname , class:"form-control pl-0 col-3" %>
      </div>

      <div class="form-group row justify-content-center">
        <label class="col-2 control-label col-from-label text-left pl-0">住んでいる都道府県</label>
        <%= f.select :place , User.places.keys, {}, class:"form-control pl-0 col-3" %>
      </div>

      <div class="form-group row justify-content-center">
        <label class="col-2 control-label col-from-label text-left pl-0">仕事</label>
        <%= f.text_field :job , class:"form-control pl-0 col-3" %>
      </div>

      <div class="form-group row justify-content-center">
        <label class="col-2 control-label col-from-label text-left pl-0">パスワード(6文字以上)</label>
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control pl-0 col-3" %>
      </div>

      <div class="form-group row justify-content-center">
        <label class="col-2 control-label col-from-label text-left pl-0">パスワード(確認用)</label>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control pl-0 col-3" %>
      </div>

      <div class="form-group position col-2 offset-5 justify-content-center">
        <%= f.submit 'SIGN UP', class:"btn btn-md btn-block btn-success p-2" %>
      </div>
    <% end %>
  </div>
</div>
